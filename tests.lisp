(defun test-tsp-approx ()
  (assert (equal (tsp-approx 0.124) "0 teaspoons"))
  (assert (equal (tsp-approx 0.125) "<1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 0.249) "<1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 0.250) "<1> 1/4th teaspoons"))
  (assert (equal (tsp-approx 0.374) "<1> 1/4th teaspoons"))
  (assert (equal (tsp-approx 0.375) "<1> 1/4th teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 0.499) "<1> 1/4th teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 0.500) "<1> 1/2 teaspoons"))
  (assert (equal (tsp-approx 0.624) "<1> 1/2 teaspoons"))
  (assert (equal (tsp-approx 0.625) "<1> 1/2 teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 0.749) "<1> 1/2 teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 0.750) "<1> 1/2 teaspoons plus <1> 1/4th teaspoons"))
  (assert (equal (tsp-approx 0.875) "<1> 1/2 teaspoons plus <1> 1/4th teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 1.000) "1 teaspoons"))
  (assert (equal (tsp-approx 1.124) "1 teaspoons"))
  (assert (equal (tsp-approx 1.125) "1 teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 1.249) "1 teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 1.250) "1 teaspoons plus <1> 1/4th teaspoons"))
  (assert (equal (tsp-approx 1.374) "1 teaspoons plus <1> 1/4th teaspoons"))
  (assert (equal (tsp-approx 1.375) "1 teaspoons plus <1> 1/4th teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 1.499) "1 teaspoons plus <1> 1/4th teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 1.500) "1 teaspoons plus <1> 1/2 teaspoons"))
  (assert (equal (tsp-approx 1.624) "1 teaspoons plus <1> 1/2 teaspoons"))
  (assert (equal (tsp-approx 1.625) "1 teaspoons plus <1> 1/2 teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 1.749) "1 teaspoons plus <1> 1/2 teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 1.750) "1 teaspoons plus <1> 1/2 teaspoons plus <1> 1/4th teaspoons"))
  (assert (equal (tsp-approx 1.874) "1 teaspoons plus <1> 1/2 teaspoons plus <1> 1/4th teaspoons"))
  (assert (equal (tsp-approx 1.875) "1 teaspoons plus <1> 1/2 teaspoons plus <1> 1/4th teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 1.999) "1 teaspoons plus <1> 1/2 teaspoons plus <1> 1/4th teaspoons plus <1> 1/8th teaspoons"))
  (assert (equal (tsp-approx 2.000) "2 teaspoons"))
  (assert (equal (tsp-approx 3.000) "3 teaspoons"))
  (assert (equal (tsp-approx 4.000) "4 teaspoons"))
  (assert (equal (tsp-approx 5.000) "5 teaspoons")))
